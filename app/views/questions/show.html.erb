<div id="question-container">
  <div class="container">


    <div class="title">
      <h3>【質問】</h3>
      <%= @question.title %>
    </div>

    <hr>

    <div class="detail">
      <h3>【詳細】</h3>
      <p>エラーの内容</p>
      <%= markdown(@question.detail).html_safe %>
    </div>

    <hr>

    <div class="solution">
        <h3>【回答】</h3>
    </div>
  </div>
</div>
