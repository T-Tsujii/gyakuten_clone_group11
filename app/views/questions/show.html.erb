<div id="question-container">
  <div class="container">


    <div class="title">
      <h3>【質問】</h3>
      <%= @question.title %>
    </div>

    <hr>

    <div class="detail">
      <h3>【詳細】</h3>
      <p>エラーの内容</p>
      <%= markdown(@question.detail).html_safe %>
    </div>

    <hr>

    <div class="solution">
    <% if @question.solutions.any? %>
      <% @solutions.each do |solution| %>
        <%= solution.detail %>
      <% end %>
      <% else %>
      <P>No solution </P>
      <% end %>

      <%= form_with model: [@question, @solution], local: true do |f| %>
        <%= f.hidden_field :question_id, { value: @question.id } %>
        <div class="form-group">
          <%= f.label "【質問投稿】" %>
          <%= f.text_area :detail, class: 'form-control'%>
        </div>
        <div class="fonr-group">
          <%= f.submit "送信", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
